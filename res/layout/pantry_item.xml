<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    
	<TextView
	    android:id="@+id/pantryItemText"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:padding="5dp"
	    android:paddingLeft="10dp"
	    android:textSize="16sp"
		android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"
	    android:layout_toLeftOf="@+id/pantryItemShoplistLock"
	    android:ellipsize="end"
	    android:singleLine="true"
	    >
	</TextView>
	
	<Button
	    android:id="@+id/pantryItemShoplistLock"
	    android:layout_width="40dip"
	    android:layout_height="40dip"
	    android:layout_centerVertical="true"
	    android:layout_toLeftOf="@+id/pantryItemContextButton"
	    android:background="@drawable/glyphicons_202_shopping_cart_passive_large"
	    android:gravity="center_vertical|center_horizontal"/>
	
	<Button
	    android:id="@+id/pantryItemContextButton"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:text="Menu" />

</RelativeLayout>